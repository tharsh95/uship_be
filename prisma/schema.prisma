generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Employee {
  id         Int      @id @default(autoincrement())
  name       String
  email      String?  @unique
  age        Int
  department String?
  position   String?
  salary     Float?
  class      String
  subjects   String   // JSON array as string
  attendance Float?
  avatar     String?
  phone      String?
  address    String?
  startDate  DateTime?
  status     String   @default("active")
  role       Role     @default(EMPLOYEE)
  password   String   // Hashed password
}

enum Role {
  ADMIN
  EMPLOYEE
}
